<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_app_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/spacing_m">

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/spacing_m"
            android:background="@drawable/bg_challenge_icon_circle">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_challenge_snake"
                app:tint="?attr/colorPrimary" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:text="@string/snake_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary" />

        <TextView
            android:id="@+id/tvSnakeScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/snake_score_initial"
            android:textSize="14sp"
            android:textColor="@color/lilac_on_surface_secondary" />

        <!-- Game board in card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_s"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <com.frovexsoftware.smartup.challenge.view.SnakeBoardView
                android:id="@+id/snakeBoard"
                android:layout_width="match_parent"
                android:layout_height="320dp" />

        </com.google.android.material.card.MaterialCardView>

        <!-- D-pad with icon buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_s"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSnakeUp"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:icon="@drawable/ic_arrow_up"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:cornerRadius="16dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSnakeLeft"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:icon="@drawable/ic_arrow_left"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:cornerRadius="16dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <Space
                    android:layout_width="60dp"
                    android:layout_height="56dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSnakeRight"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:icon="@drawable/ic_arrow_right"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:cornerRadius="16dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSnakeDown"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="4dp"
                app:icon="@drawable/ic_arrow_down"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:cornerRadius="16dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
