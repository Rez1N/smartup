<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    tools:context=".EditAlarmActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/editScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/actionsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_l">

        <TextView
            android:id="@+id/tvEditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/edit_morning_ritual"
            android:textColor="@color/purple_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <FrameLayout
            android:id="@+id/timeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvTimeBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:30" android:layout_marginTop="8dp"
                android:textColor="@color/purple_dark"
                android:textSize="48sp"
                android:fontFamily="sans-serif-light"
                android:includeFontPadding="false"
                android:layout_gravity="center" />

            <LinearLayout
                android:id="@+id/timeSpinnerContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_gravity="center" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvEditSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/purple_medium"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/timeContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Card 1: Challenge / How to start -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardChallenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/card_bg_default"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/timeContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_how_to_start"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <!-- Main Selector -->
                <LinearLayout
                    android:id="@+id/btnMainChallenge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tab_inactive"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">
                    
                    <ImageView
                        android:id="@+id/ivMainChallengeIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_leaf"
                        app:tint="@color/purple_dark" />

                    <TextView
                        android:id="@+id/tvMainChallengeText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/edit_morning_me"
                        android:textColor="@color/purple_dark"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play" 
                        android:rotation="0"
                        app:tint="@color/purple_medium"/> 
                </LinearLayout>

                <!-- Chips Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                     <LinearLayout
                        android:id="@+id/chipSnake"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_tab_inactive"
                        android:gravity="center"
                        android:layout_marginEnd="6dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_challenge_snake"
                            app:tint="@color/purple_dark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/chip_snake"
                            android:textSize="10sp"
                            android:textColor="@color/purple_dark"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/chipDots"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_tab_inactive"
                        android:gravity="center"
                        android:layout_marginStart="6dp">
                         <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_challenge_dots"
                            app:tint="@color/purple_dark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/chip_dots"
                            android:textSize="10sp"
                            android:textColor="@color/purple_dark"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/extraChallengesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/chipShake"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_tab_inactive"
                            android:gravity="center"
                            android:layout_marginEnd="6dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_leaf"
                                app:tint="@color/purple_dark" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/challenge_shake"
                                android:textSize="10sp"
                                android:textColor="@color/purple_dark"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:layout_marginStart="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/chipHold"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_tab_inactive"
                            android:gravity="center"
                            android:layout_marginStart="6dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_leaf"
                                app:tint="@color/purple_dark" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/challenge_hold"
                                android:textSize="10sp"
                                android:textColor="@color/purple_dark"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:layout_marginStart="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/chipRandom"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_tab_inactive"
                        android:gravity="center"
                        android:layout_marginTop="6dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_leaf"
                            app:tint="@color/purple_dark" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/challenge_random"
                            android:textSize="10sp"
                            android:textColor="@color/purple_dark"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
                </LinearLayout>
                
                 <!-- Chips Row 2 -->
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                          android:layout_marginTop="4dp">
                     <LinearLayout
                        android:id="@+id/chipMath"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_tab_inactive"
                        android:gravity="center"
                        android:layout_marginEnd="6dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_challenge_math"
                            app:tint="@color/purple_dark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/chip_math"
                            android:textSize="10sp"
                            android:textColor="@color/purple_dark"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/chipColor"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_tab_inactive"
                        android:gravity="center"
                        android:layout_marginStart="6dp">
                         <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_challenge_color"
                            app:tint="@color/purple_dark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/chip_color"
                            android:textSize="10sp"
                            android:textColor="@color/purple_dark"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/extraChallengesToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/tvExtraChallengesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/extra_challenges"
                        android:textColor="@color/purple_medium"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/ivExtraToggle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_media_play"
                        android:rotation="90"
                        app:tint="@color/purple_medium" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTurnOffHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_turn_off_hint"
                    android:textColor="@color/purple_medium"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 2: Activation -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardActivation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/card_bg_default"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/cardChallenge">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_activation"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <!-- Tabs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <TextView
                        android:id="@+id/tabWeekdays"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/edit_tab_weekdays"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_tab_active"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tabEveryday"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/edit_tab_everyday"
                        android:textColor="@color/purple_dark"
                        android:background="@android:color/transparent" 
                        android:textSize="12sp"
                        android:layout_marginHorizontal="4dp"/>

                    <TextView
                        android:id="@+id/tabWeekends"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/edit_tab_weekends"
                        android:textColor="@color/purple_dark"
                        android:background="@drawable/bg_tab_inactive"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Day Circles -->
                <LinearLayout
                    android:id="@+id/llDayCircles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp">

                    <TextView android:id="@+id/dayMon" android:layout_width="34dp" android:layout_height="34dp" android:text="Пн" android:gravity="center" android:background="@drawable/bg_day_circle_inactive" android:textColor="@color/purple_dark" android:layout_marginHorizontal="2dp"/>
                    <TextView android:id="@+id/dayTue" android:layout_width="34dp" android:layout_height="34dp" android:text="Вт" android:gravity="center" android:background="@drawable/bg_day_circle_inactive" android:textColor="@color/purple_dark" android:layout_marginHorizontal="2dp"/>
                    <TextView android:id="@+id/dayWed" android:layout_width="34dp" android:layout_height="34dp" android:text="Ср" android:gravity="center" android:background="@drawable/bg_day_circle_inactive" android:textColor="@color/purple_dark" android:layout_marginHorizontal="2dp"/>
                    <TextView android:id="@+id/dayThu" android:layout_width="34dp" android:layout_height="34dp" android:text="Чт" android:gravity="center" android:background="@drawable/bg_day_circle_inactive" android:textColor="@color/purple_dark" android:layout_marginHorizontal="2dp"/>
                    <TextView android:id="@+id/dayFri" android:layout_width="34dp" android:layout_height="34dp" android:text="Пт" android:gravity="center" android:background="@drawable/bg_day_circle_inactive" android:textColor="@color/purple_dark" android:layout_marginHorizontal="2dp"/>
                    <TextView android:id="@+id/daySat" android:layout_width="34dp" android:layout_height="34dp" android:text="Сб" android:gravity="center" android:background="@drawable/bg_day_circle_inactive" android:textColor="@color/purple_dark" android:layout_marginHorizontal="2dp"/>
                    <TextView android:id="@+id/daySun" android:layout_width="34dp" android:layout_height="34dp" android:text="Вс" android:gravity="center" android:background="@drawable/bg_day_circle_inactive" android:textColor="@color/purple_dark" android:layout_marginHorizontal="2dp"/>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 3: Care Toggle -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/card_bg_default"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/cardActivation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCareLabel"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/edit_care_on"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchCare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:trackTint="@color/chip_bg_active"
                    app:thumbTint="@color/white"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/actionsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:text="@string/edit_create_button"
            android:textSize="16sp"
            android:background="@drawable/bg_button_gradient"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteAlarm"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_delete"
            android:textColor="#FF5252" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
