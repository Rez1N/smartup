<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvShakeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shake_title"
        android:textColor="@color/purple_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvShakeInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shake_instruction"
        android:textColor="@color/purple_medium"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvShakeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shake_progress_placeholder"
        android:textColor="@color/purple_dark"
        android:textSize="24sp" />

</LinearLayout>
