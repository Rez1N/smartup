<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    android:padding="@dimen/spacing_m">

    <ImageButton
        android:id="@+id/btnAiAgentBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/ai_agent_back"
        android:src="@android:drawable/ic_media_previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAiAgentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ai_agent_title"
        android:textSize="26sp"
        android:textColor="@color/purple_dark"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@id/btnAiAgentBack"
        app:layout_constraintTop_toTopOf="@id/btnAiAgentBack"
        app:layout_constraintBottom_toBottomOf="@id/btnAiAgentBack"
        android:layout_marginStart="@dimen/spacing_s" />

    <TextView
        android:id="@+id/tvAiAgentSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ai_agent_subtitle"
        android:textColor="@color/purple_medium"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvAiAgentTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing_s" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAiAgentIntro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_m"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white_semi"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvAiAgentSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_m">

            <TextView
                android:id="@+id/tvAiAgentCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_agent_card_title"
                android:textColor="@color/purple_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAiAgentCardBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_agent_card_body"
                android:textColor="@color/purple_medium"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/spacing_s" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAiAgentInput"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_m"
        android:hint="@string/ai_agent_input_hint"
        app:layout_constraintTop_toBottomOf="@id/cardAiAgentIntro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAiAgentInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:maxLines="2" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAiAgentStart"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/spacing_m"
        android:text="@string/ai_agent_start"
        android:enabled="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="@null"
        android:background="@drawable/bg_button_gradient"
        app:cornerRadius="28dp"
        app:layout_constraintTop_toBottomOf="@id/tilAiAgentInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
