<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_app_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/spacing_l">

        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_challenge_icon_circle">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_challenge_dots"
                app:tint="?attr/colorPrimary" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvDotsPatternName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            android:text="@string/dots_pattern_name_placeholder"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary" />

        <TextView
            android:id="@+id/tvDotsProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/lilac_on_surface_secondary"
            android:textSize="14sp"
            android:text="@string/dots_progress_placeholder" />

        <!-- Pattern view in card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_l"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/lilac_surface_glass_stroke"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/challenge_card_bg">

            <com.frovexsoftware.smartup.challenge.view.PatternLockView
                android:id="@+id/patternView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvDotsError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_s"
            android:paddingHorizontal="@dimen/spacing_m"
            android:paddingVertical="6dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_s"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegenerateDots"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/dots_new_pattern"
                app:cornerRadius="14dp"
                app:strokeColor="@color/challenge_btn_outline" />

            <Space
                android:layout_width="@dimen/spacing_s"
                android:layout_height="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetDots"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/dots_reset_pattern"
                app:cornerRadius="14dp"
                app:strokeColor="@color/challenge_btn_outline" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
